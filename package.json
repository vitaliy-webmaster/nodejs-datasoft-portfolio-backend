{
  "name": "nodejs-datasoft-portfolio-backend",
  "version": "0.1.0",
  "description": "Minimalistic Express API developed for personal portfolio React application.",
  "type": "module",
  "main": "./build/src/main.js",
  "engines": {
    "node": ">= 18.12 <19"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "mongoose": "^7.1.0",
    "tslib": "~2.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/jest": "~29.5",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "~5.59",
    "@typescript-eslint/parser": "~5.59",
    "eslint": "8.22.0",
    "eslint-config-prettier": "~8.8",
    "eslint-plugin-jest": "~27.2",
    "jest": "~29.5",
    "prettier": "~2.8",
    "rimraf": "~5.0",
    "ts-api-utils": "~0.0.44",
    "ts-jest": "~29.1",
    "typescript": "~5.0"
  },
  "scripts": {
    "start": "npm run build && node ./build/src/main.js",
    "start:dev": "node ./build/src/main.js",
    "dev": "npm run build:dev && npm run start:dev",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run eslint",
    "build": "npm run clean && tsc -p tsconfig.release.json",
    "build:dev": "npm run clean && tsc -p tsconfig.json",
    "build:watch": "npm run clean && tsc -w -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "eslint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc .",
    "prettier:fix": "npm run prettier -- --write"
  }
}
